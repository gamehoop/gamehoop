{
  "name": "gamehoop",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "NODE_OPTIONS='--import ./instrument.server.mjs' vite dev --port 3000",
    "build": "vite build && cp instrument.server.mjs .output/server",
    "check": "pnpm lint && pnpm typecheck",
    "docker:build": "./scripts/build-docker-image.sh",
    "docker:start": "docker run --rm --net=host --env-file .env.local gamehoop:latest",
    "fmt": "prettier --write .",
    "lint": "oxlint --type-aware --deny-warnings --fix",
    "lint:ci": "oxlint --type-aware --deny-warnings",
    "prepare": "husky",
    "preview": "vite preview",
    "test": "vitest --silent passed-only",
    "test:ci": "vitest --run --silent passed-only",
    "typecheck": "tsc --noEmit",
    "start": "node --import ./.output/server/instrument.server.mjs .output/server/index.mjs"
  },
  "lint-staged": {
    "*.{js,mjs,ts,tsx}": [
      "oxlint --type-aware --deny-warnings --fix",
      "prettier --write"
    ],
    "*.{json,yml,yaml,html,css,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@sentry/tanstackstart-react": "^10.22.0",
    "@t3-oss/env-core": "^0.13.8",
    "@tailwindcss/vite": "^4.0.6",
    "@tanstack/react-devtools": "^0.7.0",
    "@tanstack/react-query": "^5.66.5",
    "@tanstack/react-query-devtools": "^5.84.2",
    "@tanstack/react-router": "^1.132.0",
    "@tanstack/react-router-devtools": "^1.132.0",
    "@tanstack/react-router-ssr-query": "^1.131.7",
    "@tanstack/react-start": "^1.132.0",
    "@tanstack/router-plugin": "^1.132.0",
    "lucide-react": "^0.562.0",
    "nitro": "latest",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.0.6",
    "vite-tsconfig-paths": "^6.0.2",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@tanstack/devtools-vite": "^0.3.11",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.2.0",
    "@types/node": "^22.10.2",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.2.7",
    "oxlint": "^1.35.0",
    "oxlint-tsgolint": "^0.10.0",
    "prettier": "^3.7.4",
    "typescript": "^5.7.2",
    "vite": "^7.1.7",
    "vitest": "^4.0.16",
    "web-vitals": "^5.1.0"
  }
}
