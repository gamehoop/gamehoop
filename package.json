{
  "name": "gamehoop",
  "private": true,
  "type": "module",
  "license": "AGPL-3.0-only",
  "scripts": {
    "dev": "NODE_OPTIONS='--import ./instrument.server.mjs' vite dev --port 3000",
    "build": "vite build && cp instrument.server.mjs .output/server",
    "check": "pnpm lint && pnpm typecheck",
    "db:codegen": "kysely-codegen --camel-case --out-file src/db/schema.d.ts",
    "db:migrate": "kysely migrate latest",
    "docker:build": "./scripts/build-docker-image.sh",
    "docker:start": "docker run --rm --net=host --env-file .env.local gamehoop:latest",
    "fmt": "prettier --write .",
    "lint": "oxlint --type-aware --deny-warnings --fix",
    "lint:ci": "oxlint --type-aware --deny-warnings",
    "prepare": "husky",
    "preview": "vite preview",
    "test": "vitest --silent passed-only",
    "test:ci": "vitest --run --silent passed-only",
    "test:e2e": "playwright test",
    "typecheck": "tsc --noEmit",
    "start": "node --import ./.output/server/instrument.server.mjs .output/server/index.mjs"
  },
  "lint-staged": {
    "*.{js,mjs,ts,tsx}": [
      "oxlint --type-aware --deny-warnings --fix",
      "prettier --write"
    ],
    "*.{json,yml,yaml,html,css,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.990.0",
    "@fontsource-variable/nunito-sans": "^5.2.7",
    "@mantine/core": "^8.3.14",
    "@mantine/dates": "^8.3.14",
    "@mantine/hooks": "^8.3.14",
    "@mantine/modals": "^8.3.14",
    "@mantine/notifications": "^8.3.14",
    "@mantine/nprogress": "^8.3.14",
    "@sentry/tanstackstart-react": "^10.38.0",
    "@t3-oss/env-core": "^0.13.10",
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/react-devtools": "^0.9.5",
    "@tanstack/react-form": "^1.28.3",
    "@tanstack/react-query": "^5.90.21",
    "@tanstack/react-query-devtools": "^5.91.3",
    "@tanstack/react-router": "^1.160.0",
    "@tanstack/react-router-devtools": "^1.160.0",
    "@tanstack/react-router-ssr-query": "^1.160.0",
    "@tanstack/react-start": "^1.160.0",
    "@tanstack/react-table": "^8.21.3",
    "@tanstack/router-plugin": "^1.160.0",
    "@unpic/react": "^1.0.2",
    "better-auth": "^1.4.18",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.19",
    "kysely": "^0.28.11",
    "kysely-ctl": "^0.20.0",
    "lucide-react": "^0.564.0",
    "nitro": "latest",
    "nodemailer": "^8.0.1",
    "pg": "^8.18.0",
    "pino": "^10.3.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tailwind-merge": "^3.4.1",
    "tailwindcss": "^4.1.18",
    "vite-tsconfig-paths": "^6.1.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@faker-js/faker": "^10.3.0",
    "@playwright/test": "^1.58.2",
    "@tanstack/devtools-vite": "^0.5.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.2.3",
    "@types/nodemailer": "^7.0.10",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react-swc": "^4.2.3",
    "husky": "^9.1.7",
    "jsdom": "^28.1.0",
    "kysely-codegen": "^0.19.0",
    "lint-staged": "^16.2.7",
    "oxlint": "^1.47.0",
    "oxlint-tsgolint": "^0.13.0",
    "pino-pretty": "^13.1.3",
    "postcss": "^8.5.6",
    "postcss-preset-mantine": "^1.18.0",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
